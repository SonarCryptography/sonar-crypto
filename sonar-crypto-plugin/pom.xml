<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>org.sonarcrypto</groupId>
        <artifactId>sonarcrypto</artifactId>
        <version>1.0-SNAPSHOT</version>
    </parent>

    <artifactId>sonar-crypto-plugin</artifactId>
    <name>SonarCrypto Plugin</name>

    <packaging>sonar-plugin</packaging>

    <dependencies>
        <dependency>
            <groupId>org.sonarsource.api.plugin</groupId>
            <artifactId>sonar-plugin-api</artifactId>
            <scope>provided</scope>
        </dependency>  
        <dependency>
            <groupId>de.fraunhofer.iem</groupId>
            <artifactId>HeadlessJavaScanner</artifactId>
            <version>5.0.0</version>
        </dependency>
        <dependency>
            <groupId>com.google.guava</groupId>
            <artifactId>guava</artifactId>
            <version>32.1.3-jre</version>
        </dependency>
        <dependency>
            <groupId>org.apache.logging.log4j</groupId>
            <artifactId>log4j-api</artifactId>
            <version>2.25.0</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>org.apache.logging.log4j</groupId>
            <artifactId>log4j-core</artifactId>
            <version>2.25.0</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>org.apache.maven.shared</groupId>
            <artifactId>maven-invoker</artifactId>
            <version>3.2.0</version>
        </dependency>
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-simple</artifactId>
            <version>1.7.30</version>
            <scope>runtime</scope>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <!-- Download and extract CrySL rules during build -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-antrun-plugin</artifactId>
                <version>3.1.0</version>
                <executions>
                    <execution>
                        <id>download-crysl-rules</id>
                        <phase>generate-resources</phase>
                        <goals>
                            <goal>run</goal>
                        </goals>
                        <configuration>
                            <target>
                                <mkdir dir="${project.build.directory}/downloaded-rules"/>
                                <mkdir dir="${project.build.outputDirectory}/crysl-rules"/>
                                
                                <!-- Download the rules zip file using curl (cross-platform) -->
                                <exec executable="curl" failonerror="true">
                                    <arg value="-L"/>
                                    <arg value="-o"/>
                                    <arg value="${project.build.directory}/downloaded-rules/crypto-rules.zip"/>
                                    <arg value="https://github.com/CROSSINGTUD/Crypto-API-Rules/archive/refs/heads/master.zip"/>
                                </exec>
                                
                                <!-- Extract zip file -->
                                <unzip src="${project.build.directory}/downloaded-rules/crypto-rules.zip" 
                                       dest="${project.build.directory}/extracted-rules"/>
                                       
                                <!-- Copy all .crysl files to resources preserving directory structure -->
                                <copy todir="${project.build.outputDirectory}/crysl-rules">
                                    <fileset dir="${project.build.directory}/extracted-rules/Crypto-API-Rules-master">
                                        <include name="**/*.crysl"/>
                                    </fileset>
                                </copy>
                            </target>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.sonarsource.sonar-packaging-maven-plugin</groupId>
                <artifactId>sonar-packaging-maven-plugin</artifactId>
                <extensions>true</extensions>
                <configuration>
                    <pluginKey>crypto</pluginKey>
                    <pluginName>Cryptography Analysis</pluginName>
                    <pluginClass>org.sonarcrypto.CryptoPlugin</pluginClass>
                    <pluginDescription>Detect Cryptographical Issues</pluginDescription>
                    <skipDependenciesPackaging>false</skipDependenciesPackaging>
                </configuration>
            </plugin>
        </plugins>
    </build>

</project>
